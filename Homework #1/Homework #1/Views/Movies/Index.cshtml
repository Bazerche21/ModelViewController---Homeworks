@model IEnumerable<Movie>

@{
    ViewData["Title"] = "Movies";
}

<h2>Movies</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Genre</th>
            <th>Language</th>
            <th>Available</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.Genre</td>
                <td>@movie.Language</td>
                <td>@movie.Quantity > 0 ? "Yes" : "No"</td>
                <td>
                    <a asp-action="Details" asp-route-id="@movie.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>